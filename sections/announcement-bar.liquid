<div class="swiper announcement-slider {% if section.settings.enable_countdown_bar %} countdown-enabled {% endif %}" data-json='{{ json }}' data-section-id="{{ section.id }}">
  {% if section.settings.enable_countdown_bar %}
    <div class="countdown-timer-container">
      <button id="close-countdown-bar" aria-label="Close Countdown Bar">
        {% render 'icon-close' %}
      </button>
      <div class="countdown-timer-inner page-width">
        {% if section.settings.countdown_bar_text %}
          <h6 class="mobile-row mobile-only">{{ section.settings.countdown_bar_text }}</h6>
        {% endif %}
        <div class="main-timer-row">
          <div class="col desktop-only">
            <h6>{{ section.settings.countdown_bar_text }}</h6>
          </div>
          <div class="col timer-area">

            <div class="days-container">
              <div class="row">
                <span class="timer-digit first-digit">0</span>
                <span class="timer-digit second-digit">0</span>
              </div>
              <div class="row time-label">DAYS</div>
            </div>
            <span class="timer-seperator">:</span>
            <div class="hours-container">
              <div class="row">
                <span class="timer-digit first-digit">0</span>
                <span class="timer-digit second-digit">0</span>
              </div>
              <div class="row time-label">HRS</div>
            </div>
            <span class="timer-seperator">:</span>
            <div class="minutes-container">
              <div class="row">
                <span class="timer-digit first-digit">0</span>
                <span class="timer-digit second-digit">0</span>
              </div>
              <div class="row time-label">MINS</div>
            </div>
            <span class="timer-seperator">:</span>
            <div class="secs-container">
              <div class="row">
                <span class="timer-digit first-digit">0</span>
                <span class="timer-digit second-digit">0</span>
              </div>
              <div class="row time-label">SECS</div>
            </div>
            
          </div>
          <div class="col link-col">
            {% if section.settings.countdown_timer_button_link != blank and section.settings.enable_klaviyo_button_opener == false %}
              <a href="{{ section.settings.countdown_timer_button_link }}">{{ section.settings.countdown_timer_button_text }}</a>
            {% endif %}
            {% if section.settings.enable_klaviyo_button_opener %}
              <button class="klaviyo-popup-opener">{{ section.settings.countdown_timer_button_text }}</button>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    {% for block in section.blocks %}
    <div class="swiper-slide">
      <div class="announcement-bar block--{{ block.id }} gradient" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
            {%- endif -%}
            <p class="announcement-bar__message">
              {{ block.settings.text | escape }}
            </p>
            {%- if block.settings.link != blank -%}
          </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
    {% endfor %}
  </div>
  

</div>

