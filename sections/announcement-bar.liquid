    }
    .announcement-slider .countdown-timer-container #close-countdown-bar {
      font-size: 13px;
    }
  }

  </style>

  <script>
    window.addEventListener('DOMContentLoaded', () => {

      const closeBtn = document.querySelector('#close-countdown-bar')
      const announcementSlider = document.querySelector('.announcement-slider')
      const countdownBar = document.querySelector('.announcement-slider .countdown-timer-container')
      const countdownYear = {{ section.settings.year }}
      const countdownMonth = {{ section.settings.month }}
      const countdownDay = {{ section.settings.day }}
      const countdownHour = {{ section.settings.hour }}
      const countdownMinute = {{ section.settings.minute }}
      
      // Convert PT time to UTC for accurate countdown
      // PT is UTC-8 (PST) or UTC-7 (PDT during daylight saving time)
      // For November 2025, it would be PST (UTC-8)
      const targetUTCDate = new Date(Date.UTC(
        countdownYear,
        countdownMonth - 1,
        countdownDay,
        countdownHour + 8, // Add 8 hours to convert PST to UTC
        countdownMinute,
        0,
        0
      ));
      
      const countdownDate = targetUTCDate.getTime()

      const daysContainer = document.querySelector('.days-container .row:first-child')
      const hoursContainer = document.querySelector('.hours-container .row:first-child')
      const minutesContainer = document.querySelector('.minutes-container .row:first-child')
      const secsContainer = document.querySelector('.secs-container .row:first-child')

      closeBtn.addEventListener('click', () => {
        countdownBar.classList.add('closed')
        setTimeout(() => {
          announcementSlider.style.height = 'auto'
          const announcementHeight = announcementSlider.offsetHeight + 'px'
          document.querySelector('#shopify-section-header').style.setProperty('--announcement-sticky', announcementHeight)
        }, 600)
      })
      {% if section.settings.enable_klaviyo_button_opener %}
        const klaviyoButton = document.querySelector('.announcement-slider .klaviyo-popup-opener')
        klaviyoButton.addEventListener('click', (e) => {
          e.preventDefault()
          console.log('clicked...')
          window._klOnsite = window._klOnsite || []
          window._klOnsite.push(['openForm', 'VACENj'])
        })
      {% endif %}

      function updateCountdown() {

        const now = new Date().getTime()
        const distance = countdownDate - now
        const timerArea = document.querySelector('.announcement-slider .timer-area')

        if (!timerArea.classList.contains('active')) {
          timerArea.classList.add('active')
        }

        if (distance < 0) {
          clearInterval(countdownInterval)
          // Set all digits to 00
          document.querySelector('.days-container .first-digit').innerHTML = '0'
          document.querySelector('.days-container .second-digit').innerHTML = '0'
          document.querySelector('.hours-container .first-digit').innerHTML = '0'
          document.querySelector('.hours-container .second-digit').innerHTML = '0'
          document.querySelector('.minutes-container .first-digit').innerHTML = '0'
          document.querySelector('.minutes-container .second-digit').innerHTML = '0'
          document.querySelector('.secs-container .first-digit').innerHTML = '0'
          document.querySelector('.secs-container .second-digit').innerHTML = '0'
          return
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24))
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60))
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60))
        const seconds = Math.floor((distance % (1000 * 60)) / 1000)

        // Update individual digits
        const daysStr = String(days).padStart(2, '0')
        const hoursStr = String(hours).padStart(2, '0')
        const minutesStr = String(minutes).padStart(2, '0')
        const secondsStr = String(seconds).padStart(2, '0')

        // Days
        document.querySelector('.days-container .first-digit').innerHTML = daysStr[0]
        document.querySelector('.days-container .second-digit').innerHTML = daysStr[1]

        // Hours
        document.querySelector('.hours-container .first-digit').innerHTML = hoursStr[0]
        document.querySelector('.hours-container .second-digit').innerHTML = hoursStr[1]

        // Minutes
        document.querySelector('.minutes-container .first-digit').innerHTML = minutesStr[0]
        document.querySelector('.minutes-container .second-digit').innerHTML = minutesStr[1]

        // Seconds
        document.querySelector('.secs-container .first-digit').innerHTML = secondsStr[0]
        document.querySelector('.secs-container .second-digit').innerHTML = secondsStr[1]
      }

      const countdownInterval = setInterval(updateCountdown, 1000)
      updateCountdown()
    })
  </script>
{% endif %}

