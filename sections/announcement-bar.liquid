{% if section.settings.enable_countdown_bar %}
  <style>
  .announcement-slider.countdown-enabled {
    position: relative;
    height: 75px;
  }
  .announcement-slider .countdown-timer-container {
    position: absolute;
    right: 1rem;
    z-index: 4;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: {{ section.settings.countdown_bar_background_color }};
    transition: 300ms ease-in-out;
  }

  .announcement-slider .countdown-timer-container.closed {
    transform: translateY(-150%);
  }

  .announcement-slider .countdown-timer-container #close-countdown-bar {
    position: absolute;
    cursor: pointer;
    width: 15px;
    height: 15px;
    right: 1rem;
    top: 1rem;
    z-index: 5;
    background: transparent;
    border: none;
    padding: 0;
  }
  .announcement-slider .countdown-timer-container #close-countdown-bar svg {
    width: 100%;
    height: 100%;
  }
  .announcement-slider .countdown-timer-container #close-countdown-bar path {
    fill: {{ section.settings.countdown_bar_text_color }};
  }

  .announcement-slider .countdown-timer-inner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  } 

  .announcement-slider .main-timer-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: max-content;
    width: 100%;
  }

  .announcement-slider h6 {
    color: {{ section.settings.countdown_bar_text_color }};
    margin: 0;
    font-weight: 600;
  }
  .announcement-slider .main-timer-row .col {
    flex: 1;
  }

  .announcement-slider .timer-area {
    display: flex;
    justify-content: center;
    align-items: center;
    color: {{ section.settings.countdown_timer_text_color }};
  }

  .announcement-slider .timer-area .timer-seperator {
    color: {{ section.settings.countdown_bar_text_color }};
    font-size: 21px;
    font-weight: bold;
    margin: 0 0.75rem;
    line-height: 1;
    margin-bottom: 17px;
  } 

  .announcement-slider .timer-area .row {
    display: flex;
    justify-content: center;
    gap: 0.4rem;
  }

  .announcement-slider .timer-area .timer-digit {
    background-color: {{ section.settings.countdown_timer_button_bg_color }};
    color: {{ section.settings.countdown_timer_button_bg_color }};
    padding: 10px;
    border-radius: 5px;
    line-height: 1;
    font-weight: 700;
    font-size: 14px;
    transition: 300ms;
  }

  .announcement-slider .timer-area.active .timer-digit {
    color: {{ section.settings.countdown_timer_text_color }};
  }

  .announcement-slider .timer-area .time-label {
    color: {{ section.settings.countdown_bar_text_color }};
    font-size: 11px;
    font-weight: bold;
    margin-top: 0.5rem;
    line-height: 1;
  }

  .announcement-slider .link-col {
    display: flex;
    justify-content: end;
  }

  .announcement-slider .link-col a,
  .announcement-slider .link-col .klaviyo-popup-opener {
    color: {{ section.settings.countdown_timer_button_text_color }};
    background-color: {{ section.settings.countdown_timer_button_bg_color }};
    text-transform: uppercase;
    text-decoration: none;
    padding: 8px 16px;
    font-weight: 700;
    line-height: 1.3;
    letter-spacing: 0.02rem !important;
    border: none;
    cursor: pointer;
  }

  #shopify-section-header {
    transition: 300ms ease-in-out;
  }

  @media screen and (max-width:751px) {
    .announcement-slider.countdown-enabled {
      height: 92px;
    }
    .announcement-slider .countdown-timer-inner {
      gap: 1rem;
    }
    .announcement-slider .timer-area .timer-digit {
      padding: 7px;
      font-size: 12px;
    }
    .announcement-slider .link-col a,
    .announcement-slider .link-col .klaviyo-popup-opener  {
