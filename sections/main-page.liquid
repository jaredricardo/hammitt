<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="{{ section.settings.width }} section-{{ section.id }}-padding">
  <{{ section.settings.heading_html_tag }} class="main-page-title page-title h0 {% if section.settings.hide_title %}visually-hidden{% endif %}">
    {{ page.title | escape }}
  </{{ section.settings.heading_html_tag }}>
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "select",
      "label": "Page Title HTML Tag",
      "id": "heading_html_tag",
      "default": "h1",
      "options": [
        {
          "label": "<h1>",
          "value": "h1"
        },
        {
          "label": "<h2>",
          "value": "h2"
        },
        {
          "label": "<strong>",
          "value": "strong"
        }
      ]
    },
	{
      "type": "checkbox",
      "id": "hide_title",
      "label": "Hide title"
    },
	{
      "type": "select",
      "id": "width",
      "label": "Page width",
	  "default":"page-width",
	  "options": [
	    { "label":"Page width", "value":"page-width" },
		{ "label":"Narrow", "value":"page-width--narrow" },
		{ "label":"Full width", "value":"full-width" }
	  ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 36
    }
  ]
}
{% endschema %}
