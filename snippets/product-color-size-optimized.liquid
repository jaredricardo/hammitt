        <span>{{ 'Large:' | upcase }}</span> 
      {% if dc_product_size == "lrg" %}
        <strong>{{ product_color }}</strong>
      {% endif %}
      </p>
    <ul class="custom-variant-list">
      {%- for product in colorway_collection -%}
  
