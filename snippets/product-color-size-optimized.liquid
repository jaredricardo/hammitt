                {{ product.featured_image | image_url: width: 80 | image_url: height: 80 | image_tag: preload: true }}
              </a>
            </div>
          </li>

      {% endfor %}
    </ul>
  </div>
  
  {% comment %} Medium products {% endcomment %}
  <div class="variant-picker-group-wrapper">
