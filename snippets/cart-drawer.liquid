{% if settings.enable_free_multi_gift_select %}
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      class FreeMultiGiftSelect extends HTMLElement {
        constructor() {
          super()
        }

        connectedCallback() {
          this.querySelectorAll('free-multi-gift-select-item').forEach((select) => {
            // Listen for clicks on the entire item element
            select.addEventListener('click', async (e) => {
              // Don't proceed if already loading
              if (select.classList.contains('loading')) {
                return
              }
              
              // Add loading class immediately on click
              select.classList.add('loading')
              
              const variantId = select.dataset.variantId
              await this.addMultiGiftOptionToCart(variantId, select)
            })
            
          })
        }

        async addMultiGiftOptionToCart(variantId, selectElement) {

          let formData = {
            items: [
              {
                id: variantId,
                quantity: 1,
              }
            ],
            sections: "cart-drawer,cart-icon-bubble,main-cart-items,header"
          }

          fetch(window.Shopify.routes.root + 'cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
            })
            .then((response) => {
              return response.json()
            })
            .then((json) => {
              cartUpdate(json)
            })
          }
      }
      
      customElements.define('free-multi-gift-select', FreeMultiGiftSelect)
    })
  </script>
{% endif %}  

