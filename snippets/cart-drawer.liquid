{%- liquid
  assign appear_delay = 1
  assign has_gift_note = false
  assign cart_price_towards_free_gift = cart.total_price

  if settings.free_multi_gift_use_qualifying_tag

    assign qualifying_tag = settings.free_multi_gift_qualifying_tag
    assign cart_price_towards_free_gift = 0

    for item in cart.items
      if item.product.tags contains qualifying_tag
        assign cart_price_towards_free_gift = cart_price_towards_free_gift | plus: item.final_line_price
      endif
    endfor

    assign cart_price_towards_free_gift = cart_price_towards_free_gift

  endif

  ## Only show products that are not small, medium, or large, if this metafield dosnt exist, then we are on a 
  ## color variant with no sizes.
  if product_size
    continue
  endif

  # Only show exclusive product if customer has shareholder tag and seo hidden is 1 #
  if isShareholder == false and product.metafields.seo.hidden == 1
    continue 
  endif

  if product.metafields.custom.hide_product_all_customers == 1
    continue
  endif

  if product.handle == top_level_handle
    assign isCurrent = true
  endif

  if settings.enable_free_gift_wrap

    assign has_reached_gift_wrap_threshold = false
    assign cart_contains_gift_wrap = false
    assign converted_gift_wrap_threshold_price = settings.free_gift_wrap_threshold_price | times: 100
    assign gift_wrap_product = all_products[settings.free_gift_wrap_product]

    if cart_price_towards_free_gift >= converted_gift_wrap_threshold_price

      assign has_reached_gift_wrap_threshold = true

      for item in cart.items
        if item.product_id == gift_wrap_product.id
          assign cart_contains_gift_wrap = true
        endif
      endfor

    endif

  endif

  if settings.enable_free_multi_gift_select == true

    assign has_reached_threshold = false
    assign cart_contains_gift_item = false
    assign converted_threshold_price = settings.free_multi_gift_select_threshold_price | times: 100

    if cart_price_towards_free_gift >= converted_threshold_price

      assign has_reached_threshold = true

      # in this instance it is ok to use product_id instead of variant because we dont actually use variants at Hammitt
      for item in cart.items
        for product in settings.free_multi_gift_select_collection.products
          if item.product_id == product.id
            assign cart_contains_gift_item = true
          endif
        endfor
      endfor

    endif


  endif

-%}

